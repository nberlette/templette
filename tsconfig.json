{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext"],
    "allowJs": false,
    "declaration": false,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitHelpers": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "removeComments": false,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "paths": {
      "~": ["./src"],
      "~/*": ["./*", "./src/*"],
      "@": ["./src"],
      "@/*": ["./*", "./src/*"]
    }
  },
  "files": ["./src/index.ts", "./index.d.ts"]
}
